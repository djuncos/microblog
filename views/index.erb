<!DOCTYPE html>
<html>
<head>
	<title>home</title>
</head>
<body>





<h1>Blogspace</h1>

<%= flash[:login] if flash[:login] %>

<ul>
		<%= @username%>
</ul>
<br>
<a href="/profile">Profile</a>
<p>Write a new post:</p>
<form method="POST" action="/posts">
	<label for="title">Title</label><input type="text" name="[post]title">
	<br>
	<br>
	<label for="body">Body</label><textarea name="[post]body"></textarea>
	<br>
	<br>
	<input type="submit">
</form>



<ul>

	<% @posts.each do |post| %>
	  <li>
	    <span><%= date_method (post.created_at) %></span>
	    <span><%= User.find(post.user_id).username %></span>
	    &nbsp;&nbsp;&nbsp;&nbsp;<span><%= post.title %></span>

	  </li>
	<% end %>
</ul>


<a href="/sign-out">Log out</a>





</body>
</html>