<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>





<h1>Welcome to my blog.</h1>

<%= flash[:notice] if flash[:notice] %>

<ul>
		<%= @username%>
</ul>


<form method="POST" action="/posts">
	<label for="title">Title</label><input type="text" name="[post]title">
	<br>
	<br>
	<label for="body">Body</label><textarea name="[post]body"></textarea><input type="submit">
</form>



<ul>

	<% @posts.each do |post| %>
	  <li>
	    <span><%= date_method (post.created_at) %></span>
	    <span><%= post.title %></span>
	    <span><%= User.find(post.user_id).username %></span>

	  </li>
	<% end %>
</ul>








</body>
</html>